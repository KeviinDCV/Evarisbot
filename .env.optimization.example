# ============================================================================
# OPTIMIZACIÓN DE MEMORIA - Variables de Entorno
# ============================================================================
# IMPORTANTE: Estas optimizaciones están DESACTIVADAS por defecto.
# Activar solo después de probar en ambiente de pruebas.
# ============================================================================

# ===== ACTIVACIÓN GENERAL =====
# Cambiar a true para activar todas las optimizaciones
OPTIMIZATION_ENABLED=false

# ===== LIMPIEZA DE DATOS ANTIGUOS =====
# Activa limpieza automática de mensajes, jobs, sesiones antiguas
CLEANUP_DATA_ENABLED=false
CLEANUP_DATA_SCHEDULE=daily
CLEANUP_DATA_TIME=03:00
CLEANUP_DATA_DAYS=30
CLEANUP_DATA_DRY_RUN=true  # Modo prueba: true = no elimina nada

# ===== LIMPIEZA DE LOGS =====
# Activa limpieza automática de archivos de log antiguos
CLEANUP_LOGS_ENABLED=false
CLEANUP_LOGS_SCHEDULE=daily
CLEANUP_LOGS_TIME=03:30
CLEANUP_LOGS_DAYS=7
CLEANUP_LOGS_DRY_RUN=true  # Modo prueba: true = no elimina nada

# ===== OPTIMIZACIÓN DE BASE DE DATOS =====
# Activa optimización semanal de la base de datos
OPTIMIZE_DB_ENABLED=false
OPTIMIZE_DB_SCHEDULE=weekly
OPTIMIZE_DB_DAY=sunday
OPTIMIZE_DB_TIME=04:00

# ===== QUEUE WORKER =====
# Límites para el queue worker (ya aplicados en start-queue-worker.bat)
QUEUE_MAX_JOBS=100
QUEUE_MAX_TIME=3600
QUEUE_MEMORY_LIMIT=512
QUEUE_TIMEOUT=60

# ===== LOGGING =====
# Reducir nivel de logs para ahorrar espacio
LOG_CHANNEL=daily
LOG_LEVEL=info  # info en vez de debug
LOG_DAILY_DAYS=3  # Solo 3 días de logs

# ===== NOTIFICACIONES =====
# Notificar cuando se ejecuten tareas de optimización
OPTIMIZATION_NOTIFICATIONS=true
OPTIMIZATION_LOG_ONLY=true  # Solo logs, sin enviar emails
